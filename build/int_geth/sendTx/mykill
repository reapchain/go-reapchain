#!/bin/bash
LOGIN_NAME=$(logname)
KILL_PROCS=$1

if [ "$KILL_PROCS" == "" ];
then
	KILL_PROCS="geth|bootnode"
fi

proc_cnt=`ps -ef | egrep "$KILL_PROCS" | grep $LOGIN_NAME | egrep -v "grep|mykill" | awk '{ print $2 }'| wc -l`

if [ $proc_cnt -gt 0 ]; then
ps -ef | egrep "$KILL_PROCS" | grep $LOGIN_NAME | egrep -v "grep|mykill" | awk '{ print $2 }' | xargs kill -9
fi
