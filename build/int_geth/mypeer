#!/bin/sh

PROJ_PATH="$( cd "$(dirname "$0")" ; pwd -P )"
LOG_PATH=$PROJ_PATH/log

grep "Adding p2p peer" $LOG_PATH/[nq]*.log
echo "---------------------------------------------------------------------"
peer_cnt=$(grep "peers=49" $LOG_PATH/[nq]*.log | wc -l)
#peer_cnt=$(grep "Adding p2p peer" $LOG_PATH/[nq]*.log | grep "peers=49"|wc -l)
echo "Adding p2p peer49 : $peer_cnt"
echo "---------------------------------------------------------------------"

tail -f $LOG_PATH/[nq]*.log | egrep "Adding p2p peer|Removing p2p peer"

